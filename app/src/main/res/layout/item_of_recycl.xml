<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@color/card_background"
        card_view:cardCornerRadius="@dimen/marg"
        card_view:cardElevation="@dimen/marg"
        card_view:contentPadding="@dimen/padding">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="@dimen/dim_10x"
                android:layout_height="@dimen/dim_10x"
                android:id="@+id/rec_image"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/marg_xl"
                android:layout_marginRight="@dimen/marg_xl"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rec_title"
                android:layout_toEndOf="@+id/rec_image"
                android:layout_toRightOf="@+id/rec_image"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/dim_txt"
                android:textColor="@android:color/black"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rec_detail"
                android:layout_toEndOf="@+id/rec_image"
                android:layout_toRightOf="@+id/rec_image"
                android:layout_below="@+id/rec_title"
                android:textSize="@dimen/dim_txt1"
                android:textColor="@android:color/black"
        />

    </RelativeLayout>
</androidx.cardview.widget.CardView>